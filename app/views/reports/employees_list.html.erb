<script type="text/javascript">
    function has_left_function(e) {
        var element = document.getElementById('has_left_image'+ e.toString()).src;
        var left = element.includes("red");
        $.ajax({
                 url: "/reports/change_employee_position",
                 type: "GET",
                  data: {empid: e,left: left},
                 success: function(data) {
                   }
                 });
        if (left)
        {
            $('#has_left_image'+ e.toString()).attr('src', '/green_button.jpeg'  );
        }
        else
        {

            $('#has_left_image'+ e.toString()).attr('src', '/red_button.jpeg'  );
        }
        return false;
        // alert( );
    }
</script>